#:kivy 1.7.2


#########################
# Main Screen's layouts #
#########################

<BaseScreen>:
    canvas:
        Color:
            rgb: 0.2627, 0.2627, 0.2627
        Rectangle:
            pos: self.pos
            size: self.size


<LoginScreen>:
    login_btn: login_btn_id
    trouble_btn: trouble_btn_id
    create_aldryn_id_btn: create_aldryn_id_btn_id
    email: email_id
    password: password_id

    BoxLayout:
        orientation: 'vertical'
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            padding: 40, 20, 40, 0
            spacing: 10

            Image:
                size_hint: 1, 0.2
                source: 'img/aldryn_logo_white.png'

            Label:
                size_hint: 1, 0.1
                text: 'Login with your Aldryn ID'

            Label:
                size_hint: 1, 0.1
                text: 'E-mail'

            TabTextInput
                id: email_id
                #background_color: 0.22, 0.22, 0.22, 1
                #background_active: ''
                #background_normal: ''
                #border: 0, 0, 0, 0
                focus: True
                next: password_id
                size_hint: 1, 0.1

            Label:
                size_hint: 1, 0.1
                text: 'Password'

            TabTextInput
                id: password_id
                next: login_btn_id
                password: True
                size_hint: 1, 0.1

            Button:
                id: login_btn_id
                background_color: 0.33, 0.66, 0.9, 1
                background_down: ''
                background_normal: ''
                on_release: app.login(email_id.text, password_id.text)
                size_hint: 1, 0.1
                text: 'Login'

            Button:
                id: trouble_btn_id
                size_hint: 1, 0.1
                text: 'Trouble signing in?'
                background_normal: ''
                background_down: ''
                background_color: 0, 0, 0, 0
                on_release: app.browser_open_trouble_signing_in()

        Button:
            id: create_aldryn_id_btn_id
            size_hint: 1, 0.1
            text: 'Create an Aldryn ID'
            background_normal: ''
            background_down: ''
            background_color: 0, 0, 0, 0
            on_release: app.browser_open_account_creation()

            canvas:
                Color:
                    rgb: 0.06, 0.06, 0.06, 1
                Rectangle:
                    pos: self.pos[0], self.pos[1] + self.height - 1
                    size: self.width, 1
                Color:
                    rgb: 0.38, 0.38, 0.38, 1
                Rectangle:
                    pos: self.pos[0], self.pos[1] + self.height - 2
                    size: self.width, 1


<EmptyScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        Image:
            size_hint: None, None
            size: (100, 100)
            source: 'img/aldryn_logo.png'


<SyncScreen>:
    sites_list_view: sites_list_view_id

    AnchorLayout:
        size_hint: 1, 1
        pos_hin: {'x': 0, 'y': 0}
        anchor_x: 'center'
        anchor_y: 'center'
        Image:
            size_hint: None, None
            size: (100, 100)
            source: 'img/aldryn_logo.png'

    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'

        RelativeLayout:
            id: top_buttons_id

            height: max(top_left_buttons_id.height, top_right_buttons_id.height)
            size_hint: 1, None

            canvas:
                Color:
                    rgb: 0.2, 0.2, 0.2
                Rectangle:
                    size: self.size
                Color:
                    rgb: 0.06, 0.06, 0.06, 1
                Rectangle:
                    pos: 0, self.height - 1
                    size: self.width, 1
                Color:
                    rgb: 0.38, 0.38, 0.38, 1
                Rectangle:
                    pos: 0, self.height - 2
                    size: self.width, 1
                Color:
                    rgb: 0.06, 0.06, 0.06, 1
                Rectangle:
                    size: self.width, 1

            StackLayout:
                id: top_left_buttons_id

                height: max(open_control_panel_btn_id.height, add_new_site_btn_id.height) + self.padding[1] + self.padding[3]
                minimum_width: 300
                orientation: 'lr-tb'
                padding: 10
                pos_hint: {'x': 0, 'center_y': 0.5}
                size_hint: 0.75, None
                spacing: 10

                PaddedButton:
                    id: open_control_panel_btn_id
                    on_release: app.browser_open_control_panel()
                    text: 'Open Control Panel'

                PaddedButton:
                    id: add_new_site_btn_id
                    on_release: app.browser_open_add_new_site()
                    text: 'Add new site'

                PaddedButton:
                    id: refresh_sites_list_btn_id
                    on_release: app.load_sites_list()
                    text: 'Refresh sites list'

            StackLayout:
                id: top_right_buttons_id

                height: logout_btn_id.height + self.padding[1] + self.padding[3]
                minimum_width: 100
                orientation: 'rl-tb'
                padding: 10
                pos_hint: {'right': 1, 'center_y': 0.5}
                size_hint: 0.25, None
                spacing: 10

                PaddedButton:
                    id: logout_btn_id

                    background_color: 0.33, 0.66, 0.9, 1
                    background_down: ''
                    background_normal: ''
                    on_release: app.logout()
                    text: 'Logout'

        ScrollView:

            size_hint: 1, None
            height: self.parent.height - top_buttons_id.height - self.parent.spacing

            canvas:
                Color:
                    rgba: 0.0, 0.5, 0.5, 0.0
                Rectangle:
                    pos: self.pos
                    size: self.size

            StackLayout:
                id: sites_list_view_id

                orientation: 'tb-lr'
                size_hint: 1, None
                height: self.parent.height - 1

                canvas:
                    Color:
                        rgb: 0.06, 0.06, 0.06, 1
                    Rectangle:
                        size: self.width, 1


##################
# Dialog layouts #
##################

<InfoDialog>:
    message_label: message_label_id

    orientation: 'vertical'
    padding: 0, 10
    size_hint: 1, 1
    spacing: 10

    Label:
        id: message_label_id

    FloatLayout:
        size_hint: 1, None
        height: 40

        Button:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: None, 1
            width: 100
            text: 'Close'
            on_release: root.close()


<ConfirmDialog>:
    message_label: message_label_id.__self__

    orientation: 'vertical'
    padding: 0, 10
    size_hint: 1, 1
    spacing: 10

    Label:
        id: message_label_id

    BoxLayout:
        size_hint_y: None
        height: 30
        Button:
            text: root.cancel_btn_text
            on_release: root.cancel_callback()

        Button:
            text: root.confirm_btn_text
            on_release: root.confirm_callback()


<LoadingDialog>:
    message_label: message_label_id

    size_hint: 1, 1

    Label:
        id: message_label_id

        font_size: 20
        pos_hint: {'right': 0.5, 'center_y': 0.5}
        size: self.texture_size
        size_hint: None, None
        text: 'Loading'

    Image:
        anim_delay: 0.08
        pos_hint: {'x': 0.51, 'center_y': 0.5}
        size: 25, 25
        size_hint: None, None
        source: 'img/loader.gif'




<DirChooserDialog>:
    current_path_label: current_path_label_id
    file_chooser: file_chooser_id
    home_directory_btn: home_directory_btn_id
    new_directory: new_directory_id

    orientation: 'vertical'
    padding: 0, 10
    size_hint: 1, 1
    spacing: 10

    RelativeLayout:
        height: 30
        size_hint_y: None

        PaddedLabel:
            id: current_path_label_id

            pos_hint: {'x': 0, 'center_y': 0.5}
            text: file_chooser_id.path

        PaddedButton:
            id: home_directory_btn_id

            pos_hint: {'right': 1, 'center_y': 0.5}
            text: 'Home'
            on_release: file_chooser_id.go_to_home_dir()

    TextInput:
        id: new_directory_id

        height: 30
        hint_text: 'Write the new folder\'s name here or select one from below'
        multiline: False
        size_hint_y: None

    CustomFileChooserListView:
        id: file_chooser_id

        dirselect: True
        filters: ['']

    BoxLayout:
        height: 30
        size_hint_y: None

        Button:
            text: 'Cancel'
            on_release: root.cancel()

        Button:
            text: 'Select'
            on_release: root.select(file_chooser_id.path, file_chooser_id.selection, new_directory_id.text)


##################
# Custom widgets #
##################

<TabTextInput>:
    multiline: False
    halign: 'center'
    valign: 'middle'
    font_size: self.height - 4 * max(self.padding)


<PaddedLabel@Label>:
    halign: 'center'
    padding: 5, 5
    size: self.texture_size
    size_hint: None, None
    valign: 'middle'


<PaddedButton@Button>:
    halign: 'center'
    padding: 10, 5
    size: self.texture_size
    size_hint: None, None
    valign: 'middle'


<LinkButton@PaddedButton>:
    background_color: 0, 0, 0, 0
    background_down: ''
    background_normal: ''
    padding: 5, 5

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos[0] + self.padding_x, self.pos[1]
            size: self.texture_size[0] - 2 * self.padding_x, 1


<OpenButton@Button>
    background_color: 0, 0, 0, 0
    background_down: ''
    background_normal: ''
    size_hint: None, 1
    size: img_id.size

    Image:
        id: img_id

        pos: self.parent.pos[0], self.parent.pos[1] + (self.parent.height - self.height) / 2.0
        size: self.texture_size
        size_hint: None, None
        source: 'img/external.png'


<WebsiteView@RelativeView>:
    status_btn: status_btn_id.__self__
    name_btn: name_btn_id.__self__
    dir_label: dir_label_id.__self__
    change_or_set_dir_btn: change_or_set_dir_btn_id.__self__
    sync_btn: sync_btn_id.__self__

    height: 50
    padding: 10
    size_hint: 1, None
    spacing: 10

    canvas:
        Color:
            rgb: 0.26, 0.26, 0.26
        Rectangle:
            size: self.size
        Color:
            rgb: 0.38, 0.38, 0.38, 1
        Rectangle:
            pos: 0, self.height - 1
            size: self.width, 1
        Color:
            rgb: 0.06, 0.06, 0.06, 1
        Rectangle:
            size: self.width, 1

    StackLayout:
        orientation: 'lr-tb'
        padding: 10
        pos_hint: {'x': 0, 'center_y': 0.5}
        size_hint: 0.9, 1
        spacing: 5

        BoxLayout:
            size_hint: None, 1
            width: 20

            Button:
                id: status_btn_id
                color: 0, 0, 0, 0

                background_color: 0, 0, 0, 0
                background_down: ''
                background_normal: ''
                on_release: app.browser_open_stage(root.domain)
                pos_hint: {'center_x': .5, 'center_y': .5}
                size: (10, 10)
                size_hint: (None, None)

                canvas:
                    Color:
                        rgb: self.color
                    Ellipse:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            size_hint: 0.3, 1

            PaddedButton:
                id: name_btn_id

                background_color: 0, 0, 0, 0
                background_down: ''
                background_normal: ''
                halign: 'left'
                on_release: app.browser_open_site_dashboard(root.domain)
                pos_hint: {'x': 0, 'center_y': .5}
                text_size: self.parent.size
                valign: 'middle'

        PaddedLabel:
            id: dir_label_id

            color: .85, .85, .85, .85
            font_size: '12dp'
            size: (min(self.texture_size[0], 600), self.size[1])
            size_hint: None, 1

        LinkButton:
            id: change_or_set_dir_btn_id

            on_release: app.select_site_dir(root.domain)

    StackLayout:
        orientation: 'lr-tb'
        padding: 10
        pos_hint: {'right': 1, 'center_y': 0.5}
        size_hint: None, 1
        width: preview_btn_id.width + sync_btn_id.width + self.spacing[0] + self.padding[0] + self.padding[2]
        spacing: 10

        PaddedButton:
            id: preview_btn_id

            background_color: 0.33, 0.66, 0.9, 1
            background_down: ''
            background_normal: ''
            on_release: app.browser_open_stage(root.domain)
            text: 'Preview'

        PaddedButton:
            id: sync_btn_id

            on_release: app.sync_toggle(root.domain)
